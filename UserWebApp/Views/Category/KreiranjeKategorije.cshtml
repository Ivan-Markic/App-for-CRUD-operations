@model UserWebApp.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kreiranje Kategorije</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .form-group{
            margin-left:5%;
        }
        #btnBackToList{
            margin-left:-15%;
        }
    </style>
</head>
<body class="align-content-center text-center w-75">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group col-8 mt-1">
            <h4>Kreiranje kategorije</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mt-3">
                @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "form-label " })
                <div class="col-md-10 mt-2">
                    @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Napravi" class="btn btn-danger mt-2" />
                </div>
                @Html.ActionLink(linkText: "Povratak na listu",
                    actionName: "PrikazKategorija",
                    controllerName: "Category",
                    htmlAttributes: new { @class = "btn btn-primary w-25 mt-3", ID = "btnBackToList" },
                    routeValues: null)
            </div>
        </div>
    }
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
</body>
</html>
